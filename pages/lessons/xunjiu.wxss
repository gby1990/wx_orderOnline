/* pages/lesssons/xunjiu.wxss */
.container{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.navigation{
  width: 100%;
  height: 10vh;
  display: flex;
  flex-direction: row;
  justify-content: space-between; 
  align-items: center;
  background-color: #f7f7f7;
}

.navigation .navFood{
  width: 100%;
  height: 100rpx;
  font-size: 30rpx;
  text-align: center;
  color: rgba(0, 0, 0, 0.548);
  line-height: 100rpx;
  border-bottom: 1rpx solid rgb(185, 182, 182);
}
.navigation .navFood.active{
  margin-right: -2rpx;
  margin-left: -2rpx;
  color: black;
  background-color: white;
  border-right: 1rpx solid rgb(185, 182, 182);
  border-left: 1rpx solid rgb(185, 182, 182);
  border-top: 1rpx solid rgb(185, 182, 182);
  border-bottom: 0rpx;
}

.content{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  justify-content: flex-start;
}

  